// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model marketer_stats {
  id                                Int      @id @default(autoincrement())
  marketer_id                       String
  total_cases                       Int
  pending_cases                     Int       @default(0)
  completed_cases                   Int       @default(0)
  hospitals_count                   Int       @default(0)
  date                              DateTime?  @default(now())
  case_type_wise_counts             Json[]
  hospital_case_type_wise_counts    Json[]
  created_at                        DateTime?   @default(now())
  updated_at                        DateTime?   @default(now())
}


model revenue_marketers_schema {
  id                                        Int           @id @default(autoincrement())
  case_id                                   String
  hospital                                  String
  accession_id                              String
  case_types                                String[] 
  hospital_marketers                        Json[] 
  date_of_service                           DateTime?          
  insurance_name                            String
  payment_status                            String
  cpt_codes                                 Json[]                   
  line_item_total                           Json[]                         
  insurance_payment_amount                  Json[]                         
  insurance_adjustment_amount               Json[]                         
  insurance_write_of_amount                 Json[]                          
  patient_payment_amount                    Json[]                         
  patient_adjustment_amount                 Json[]                         
  patient_write_of_amount                   Json[]                         
  line_item_balance                         Json[]  
  total_amount                              Int  
  paid_amount                               Int
  pending_amount                            Int                     
  process_status                            String
  values_changed                            Boolean           @default(false)
  difference_values                         Json?
  patient_id                                String
}


model revenue_stats  {
    id                                 Int      @id @default(autoincrement())
    marketer_id                        String
    date                               DateTime
    total_amount                       Int
    paid_amount                        Int
    pending_amount                     Int
    case_type_wise_counts              Json[]
    hospital_wise_counts               Json[]
    hospitals                          Int
    created_at                        DateTime?   @default(now())
    updated_at                        DateTime?   @default(now())
}