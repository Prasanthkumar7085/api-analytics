generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model marketer_stats {
  id                                Int      @id @default(autoincrement())
  marketer_id                       String
  total_cases                       Int
  pending_cases                     Int       @default(0)
  completed_cases                   Int       @default(0)
  hospitals_count                   Int       @default(0)
  date                              DateTime?  @default(now())
  case_type_wise_counts             Json[]
  hospital_case_type_wise_counts    Json[]
  created_at                        DateTime?   @default(now())
  updated_at                        DateTime?   @default(now())
}


model revenue_marketers_schema {
  id                                        Int    @id @default(autoincrement())
  encounter_id                              String 
  patient_code                              String
  accession_id                              String
  patient                                   String
  patient_id                                String
  case_type                                 String
  billing_npi                               String
  referring_provider                        String
  referring_npi                             String
  total_charges                             Int                @default(0)        
  date_of_service                           DateTime?           @default(now())
  date_of_birth                             DateTime?
  icd_codes                                 String
  primary_insurance                         String
  payor_id                                  String
  primary_policy_number                     String
  payment_status                            String
  initial_billed_date                       DateTime?
  last_claim_status                         String
  created_date                              DateTime?
  created_by                                String
  modified_date                             DateTime?
  modifiedBy                                String
  cpt_codes                                 String
  line_item_units                           Int                           @default(0)
  line_item_charge                          Int                           @default(0)
  line_item_total                           Int                           @default(0)
  insurance_payment_amount                  Int                           @default(0)
  insurance_adjustment_amount               Int                           @default(0)
  expected_rate                             Int                           @default(0)
  insurance_write_of_amount                 Int                           @default(0)
  patient_payment_amount                    Int                           @default(0)
  patient_adjustment_amount                 Int                           @default(0)
  patient_write_of_amount                   Int                           @default(0)
  line_item_balance                         Int                           @default(0)
  line_item_rendering_provider              String        
  line_item_status                          String 
}